{
  "name": "vit-mono",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/db"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "redis:start": "docker-compose -f packages/db/docker-compose.yml up -d",
    "redis:stop": "docker-compose -f packages/db/docker-compose.yml down",
    "redis:logs": "docker-compose -f packages/db/docker-compose.yml logs -f",
    "redis:restart": "docker-compose -f packages/db/docker-compose.yml restart",
    "redis:clean": "docker-compose -f packages/db/docker-compose.yml down -v",
    "redis:cli": "docker exec -it vit-redis redis-cli",
    "redis:monitor": "docker exec -it vit-redis redis-cli monitor"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.507.0"
  }
}
