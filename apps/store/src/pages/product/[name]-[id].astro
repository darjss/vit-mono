---
import AddToCart from "@/components/add-to-cart";
import ImageCarousel from "@/components/image-carousel";
import Layout from "@/layouts/Layout.astro";
import api from "@/utils/trpc";

export async function getStaticPaths() {
  const allProducts = await api.product.getAllProducts.query();
  return allProducts.map((product) => ({
    params: {
      name: product.slug,
      id: product.id,
    },
    props: { id: product.id },
  }));
}

const { id } = Astro.props;
console.log(id);
const product = await api.product.getProductById.query({ id });
if (product === null) {
  throw new Error("Product not found");
}
const images = product.images
  .sort((a, b) => (a.isPrimary === b.isPrimary ? 0 : a.isPrimary ? -1 : 1))
  .map((image) => image.url);

console.log(product);
---

<Layout>
  <div class="container mx-auto py-8 md:py-16 px-4 md:px-6">
    <!-- Breadcrumb navigation -->
    <nav class="mb-8 text-sm">
      <ol class="flex items-center space-x-2">
        <li><a href="/" class="text-muted-foreground hover:text-primary transition-colors">Home</a></li>
        <li><span class="text-muted-foreground">/</span></li>
        <li><a href="/products" class="text-muted-foreground hover:text-primary transition-colors">Products</a></li>
        <li><span class="text-muted-foreground">/</span></li>
        <li><span class="text-foreground font-medium truncate max-w-[200px]">{product.name}</span></li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-16">
      <!-- Image Section -->
      <div class="w-full mx-auto">
        <div class="rounded-xl overflow-hidden shadow-[var(--shadow)] bg-card">
          <ImageCarousel
            client:only
            images={images.length > 0 ? images : [
              "https://cloudinary.images-iherb.com/image/upload/f_auto,q_auto:eco/images/obn/obn60030/l/24.jpg",
              "https://cloudinary.images-iherb.com/image/upload/f_auto,q_auto:eco/images/obn/obn60030/l/24.jpg",
            ]}
            className="aspect-square"
          />
        </div>
      </div>

      <!-- Product Info Section -->
      <div class="flex flex-col space-y-6">
        <div>
          <h1 class="text-3xl md:text-4xl font-[var(--heading-font-weight)] mb-2">
            {product.name}
          </h1>
          
          {product.brandId && (
            <div class="text-muted-foreground mb-4">
              by <span class="text-primary font-medium">{product.brandId}</span>
            </div>
          )}
          
          <div class="flex items-center mb-6">
            <span class="text-3xl font-bold text-primary">
              {product.price.toLocaleString()} ₮
            </span>
            {
              product.discount && (
                <div class="flex items-center ml-4">
                  <span class="line-through text-muted-foreground mr-2">
                    {Math.round(product.price / (1 - product.discount / 100)).toLocaleString()} ₮
                  </span>
                  <span class="px-2 py-1 bg-destructive text-destructive-foreground text-sm font-semibold rounded-full">
                    {product.discount}% OFF
                  </span>
                </div>
              )
            }
          </div>
        </div>

        <div class="prose max-w-none">
          <p class="text-lg">{product.description}</p>
        </div>

        {
          (product.potency || product.dailyIntake || product.amount) && (
            <div class="bg-secondary/50 rounded-xl p-6 backdrop-blur-sm border border-border">
              <h3 class="text-lg font-semibold mb-4">Product Details</h3>
              <div class="grid grid-cols-1 gap-4">
                {product.potency && (
                  <div class="flex items-center">
                    <div class="w-1/3 font-medium">Potency:</div>
                    <div class="w-2/3">{product.potency}</div>
                  </div>
                )}
                {product.dailyIntake && (
                  <div class="flex items-center">
                    <div class="w-1/3 font-medium">Daily Intake:</div>
                    <div class="w-2/3">{product.dailyIntake}</div>
                  </div>
                )}
                {product.amount && (
                  <div class="flex items-center">
                    <div class="w-1/3 font-medium">Amount:</div>
                    <div class="w-2/3">{product.amount}</div>
                  </div>
                )}
              </div>
            </div>
          )
        }

        <!-- Delivery Information -->
        <div class="bg-primary/10 rounded-xl p-6 border border-primary/20">
          <div class="flex items-center gap-3 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M22 12h-4l-3 9L9 3l-3 9H2"></path></svg>
            <h3 class="text-lg font-semibold">Fast Delivery</h3>
          </div>
          <p class="text-sm text-muted-foreground">Free shipping on orders over 50,000 ₮</p>
        </div>

        <div class="mt-auto pt-4">
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="w-full">
              <AddToCart client:load id={id} />
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Related Products Section (Placeholder) -->
    <div class="mt-16 md:mt-24">
      <h2 class="text-2xl font-[var(--heading-font-weight)] mb-8">You may also like</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        <!-- This would be populated with actual related products -->
      <div class="animate-pulse">
        <div class="aspect-square bg-muted rounded-lg"></div>
        <div class="mt-2 h-4 bg-muted rounded w-3/4"></div>
        <div class="mt-1 h-4 bg-muted rounded w-1/2"></div>
      </div>
      <div class="animate-pulse">
        <div class="aspect-square bg-muted rounded-lg"></div>
        <div class="mt-2 h-4 bg-muted rounded w-3/4"></div>
        <div class="mt-1 h-4 bg-muted rounded w-1/2"></div>
      </div>
      <div class="animate-pulse">
        <div class="aspect-square bg-muted rounded-lg"></div>
        <div class="mt-2 h-4 bg-muted rounded w-3/4"></div>
        <div class="mt-1 h-4 bg-muted rounded w-1/2"></div>
      </div>
      <div class="animate-pulse">
        <div class="aspect-square bg-muted rounded-lg"></div>
        <div class="mt-2 h-4 bg-muted rounded w-3/4"></div>
        <div class="mt-1 h-4 bg-muted rounded w-1/2"></div>
      </div>
      </div>
    </div>
  </div>
</Layout>
