---
import AddToCart from "@/components/cart/add-to-cart";
import ImageCarousel from "@/components/image-carousel";
import Layout from "@/layouts/Layout.astro";
import { api } from "@/utils/trpc";

export async function getStaticPaths() {
  const allProducts = await api.product.getAllProducts.query();
  return allProducts.map((product) => ({
    params: {
      name: product.slug,
      id: product.id,
    },
    props: { id: product.id },
  }));
}
const { id } = Astro.props;
const product = await api.product.getProductById.query({ id });
if (product === null) {
  throw new Error("Product not found");
}
product.discount = 10;
const brand = await api.brand.getBrandById.query({ id: product.brandId });
const primaryImage =
  product.images.find((img) => img.isPrimary)?.url ||
  (product.images.length > 0
    ? product.images[0].url
    : "/placeholder-image.jpg"); // Fallback image

const images = product.images
  .sort((a, b) => (a.isPrimary === b.isPrimary ? 0 : a.isPrimary ? -1 : 1))
  .map((image) => image.url);
const discountedPrice = Math.round(
  product.price / (1 - product.discount / 100)
);
const daysToTake =
  parseInt(product.amount?.split(" ")[1] || "0") / product.dailyIntake;
const daysSupplyText = isNaN(daysToTake)
  ? ""
  : Math.round(daysToTake) + " days supply";
// Convert id to string to avoid type errors
const productIdString = String(id);
---

<Layout>
  <div
    class="w-full mx-auto px-3 py-4 sm:px-4 sm:py-6 md:py-12 max-w-7xl relative"
  >
    <!-- Background accents -->
    <div
      class="absolute -right-20 bottom-20 w-80 h-80 bg-primary/20 rounded-full blur-3xl -z-10"
    >
    </div>
    <div
      class="absolute -top-40 -left-40 w-96 h-96 bg-accent/20 rounded-full blur-3xl -z-10"
    >
    </div>

    <nav
      class="mb-3 md:mb-6 inline-block border-4 border-border bg-secondary/50 p-2 rounded-none shadow-[var(--shadow)] hover:shadow-[5px_5px_0_0_var(--border)] transition-all"
    >
      <ol
        class="flex items-center space-x-2 text-xs md:text-sm font-[var(--base-font-weight)]"
      >
        <li>
          <a
            href="/"
            class="text-muted-foreground hover:text-primary transition-colors"
            >Нүүр</a>
        </li>
        <li><span class="text-muted-foreground">/</span></li>
        <li>
          <a
            href="/products"
            class="text-muted-foreground hover:text-primary transition-colors"
            >Бүтээгдэхүүн</a>
        </li>
        <li><span class="text-muted-foreground">/</span></li>
        <li>
          <span
            class="text-foreground font-[var(--heading-font-weight)] truncate max-w-[120px] md:max-w-[200px]"
            >{product.name}</span>
        </li>
      </ol>
    </nav>

    <div
      class="w-full grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-8 border-4 border-border p-3 md:p-6 bg-background shadow-[var(--shadow)] hover:shadow-[5px_5px_0_0_var(--border)] transition-all"
    >
      <!-- Image Section -->
      <div class="flex flex-col gap-3">
        <ImageCarousel
          client:load
          images={images.length > 0
            ? images
            : [
                "https://cloudinary.images-iherb.com/image/upload/f_auto,q_auto:eco/images/obn/obn60030/l/24.jpg",
                "https://cloudinary.images-iherb.com/image/upload/f_auto,q_auto:eco/images/obn/obn60030/l/24.jpg",
              ]}
          productId={productIdString}
        />
      </div>

      <!-- Product Info Section -->
      <div class="flex flex-col space-y-3 md:space-y-5 relative">
        <!-- Brand logo and name -->
        {
          brand && (
            <div class="flex items-center gap-2 mb-1">
              {brand.logoUrl && (
                <img
                  src={brand.logoUrl}
                  alt={brand.name + " logo"}
                  class="h-8 sm:h-10 w-auto object-contain  p-1 bg-background/80"
                />
              )}
              <span class="text-sm sm:text-base text-primary font-[var(--heading-font-weight)]">
                {brand.name || product.brandId}
              </span>
            </div>
          )
        }

        <div>
          <h1
            class="text-2xl sm:text-3xl md:text-4xl font-[var(--heading-font-weight)] uppercase border-b-4 border-border pb-2"
            transition:name={`product-name-${productIdString}`}
          >
            {product.name}
          </h1>
        </div>

        <!-- Price section with hanging sale badge -->
        <div class="flex flex-wrap items-center gap-3 mb-2 relative">
          <div class="relative">
            <span
              class="text-2xl md:text-3xl font-[var(--heading-font-weight)] border-4 border-border p-2 bg-primary text-primary-foreground shadow-[var(--shadow)] inline-block relative"
              transition:name={`product-price-${productIdString}`}
            >
              {product.price.toLocaleString()} ₮

              {/* Discount tag anchored to bottom-right of price */}
              {
                product.discount && (
                  <div class="absolute -top-4 -right-20 origin-bottom-left animate-[swing_2s_ease-in-out_infinite]">
                    <div class="bg-destructive border-4 border-border px-2 py-1 flex items-center shadow-[var(--shadow)] -rotate-3 transform hover:rotate-0 transition-all">
                      <span class="text-destructive-foreground font-[var(--heading-font-weight)] text-sm sm:text-base whitespace-nowrap">
                        {product.discount}% OFF
                      </span>
                      <div class="absolute -top-1 right-1 w-2 h-2 bg-primary rounded-full" />
                    </div>
                  </div>
                )
              }
            </span>

            {
              product.discount && (
                <span class="line-through text-muted-foreground text-base md:text-lg">
                  {discountedPrice.toLocaleString()} ₮
                </span>
              )
            }
          </div>
        </div>
        <div class="prose max-w-none mb-2">
          <p class="text-sm sm:text-base border-l-4 border-primary pl-4">
            {product.description}
          </p>
        </div>

        {
          (product.potency || product.dailyIntake || product.amount) && (
            <div class="grid grid-cols-3 gap-2 my-1">
              <div class="border-2 border-border p-2 rounded-none bg-secondary/30 shadow-[2px_2px_0_0_var(--border)]">
                <div class="flex gap-1 items-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-primary"
                  >
                    <>
                      <path d="M5 7l5-5 5 5" />
                      <path d="M12 2v14" />
                      <rect width="18" height="8" x="3" y="14" rx="2" />
                    </>
                  </svg>
                  <span class="text-xs sm:text-sm font-[var(--heading-font-weight)]">
                    Хүч
                  </span>
                </div>
                <p class="text-xs sm:text-sm mt-1">
                  {product.potency || "Мэдээлэлгүй"}
                </p>
              </div>

              <div class="border-2 border-border p-2 rounded-none bg-secondary/30 shadow-[2px_2px_0_0_var(--border)]">
                <div class="flex gap-1 items-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-primary"
                  >
                    <>
                      <path d="M12 2v20" />
                      <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" />
                    </>
                  </svg>
                  <span class="text-xs sm:text-sm font-[var(--heading-font-weight)]">
                    Өдрийн хэрэглээ
                  </span>
                </div>
                <p class="text-xs sm:text-sm mt-1">
                  {product.dailyIntake || "Мэдээлэлгүй"}
                </p>
              </div>

              <div class="border-2 border-border p-2 rounded-none bg-secondary/30 shadow-[2px_2px_0_0_var(--border)]">
                <div class="flex gap-1 items-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-primary"
                  >
                    <>
                      <path d="M6 8.5a6.5 6.5 0 1 0 13 0 6.5 6.5 0 1 0-13 0Z" />
                      <path d="M15 15.5L9 8.5" />
                    </>
                  </svg>
                  <span class="text-xs sm:text-sm font-[var(--heading-font-weight)]">
                    Хэмжээ
                  </span>
                </div>
                <p class="text-xs sm:text-sm mt-1">
                  {product.amount || "Мэдээлэлгүй"}
                </p>
              </div>
            </div>
          )
        }

        {
          daysSupplyText && (
            <div class="w-full border-2 border-border p-2 rounded-none bg-primary/20 shadow-[2px_2px_0_0_var(--border)]">
              <div class="flex gap-1 items-center justify-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-primary"
                >
                  <>
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                  </>
                </svg>
                <span class="text-xs sm:text-sm font-[var(--heading-font-weight)]">
                  Хангамж:
                </span>
                <p class="text-xs sm:text-sm font-[var(--heading-font-weight)] text-primary">
                  {daysSupplyText}
                </p>
              </div>
            </div>
          )
        }

        <!-- Action Buttons -->
        <div class="pt-2 w-full">
          <!-- Add to Cart and Buy Now Buttons -->
          <AddToCart
            client:load
            id={Number(productIdString)}
            name={product.name}
            price={product.price}
            image={primaryImage}
          />
        </div>
      </div>
    </div>

    <!-- Related Products Section -->
    <div class="mt-8 md:mt-12 lg:mt-16 w-full">
      <h2
        class="text-xl md:text-2xl font-[var(--heading-font-weight)] uppercase border-b-4 border-border pb-2 mb-4 md:mb-6"
      >
        Танд санал болгох
      </h2>

      <div
        class="grid grid-cols-2 md:grid-cols-4 gap-2 sm:gap-3 md:gap-6 w-full"
      >
        <!-- This would be populated with actual related products -->
        <div
          class="border-4 border-border p-2 md:p-3 bg-background shadow-[var(--shadow)] hover:shadow-[5px_5px_0_0_var(--border)] transition-all animate-pulse"
        >
          <div class="aspect-square bg-muted rounded-none"></div>
          <div class="mt-2 md:mt-3 h-4 md:h-5 bg-muted rounded-none w-3/4">
          </div>
          <div class="mt-1 md:mt-2 h-3 md:h-4 bg-muted rounded-none w-1/2">
          </div>
        </div>
        <div
          class="border-4 border-border p-2 md:p-3 bg-background shadow-[var(--shadow)] hover:shadow-[5px_5px_0_0_var(--border)] transition-all animate-pulse"
        >
          <div class="aspect-square bg-muted rounded-none"></div>
          <div class="mt-2 md:mt-3 h-4 md:h-5 bg-muted rounded-none w-3/4">
          </div>
          <div class="mt-1 md:mt-2 h-3 md:h-4 bg-muted rounded-none w-1/2">
          </div>
        </div>
        <div
          class="border-4 border-border p-2 md:p-3 bg-background shadow-[var(--shadow)] hover:shadow-[5px_5px_0_0_var(--border)] transition-all animate-pulse"
        >
          <div class="aspect-square bg-muted rounded-none"></div>
          <div class="mt-2 md:mt-3 h-4 md:h-5 bg-muted rounded-none w-3/4">
          </div>
          <div class="mt-1 md:mt-2 h-3 md:h-4 bg-muted rounded-none w-1/2">
          </div>
        </div>
        <div
          class="border-4 border-border p-2 md:p-3 bg-background shadow-[var(--shadow)] hover:shadow-[5px_5px_0_0_var(--border)] transition-all animate-pulse"
        >
          <div class="aspect-square bg-muted rounded-none"></div>
          <div class="mt-2 md:mt-3 h-4 md:h-5 bg-muted rounded-none w-3/4">
          </div>
          <div class="mt-1 md:mt-2 h-3 md:h-4 bg-muted rounded-none w-1/2">
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes swing {
    0%,
    100% {
      transform: rotate(-3deg);
    }
    50% {
      transform: rotate(3deg);
    }
  }
</style>
