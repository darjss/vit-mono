---
import Search from "@/icons/search.astro";
import ShoppingCart from "@/icons/shopping-cart.astro";
import astroLogo from "../assets/astro.svg";

import CartCount from "@/components/cart-count";


---

<header class="border-b border-gray-200  sticky top-0 z-50">
  <div class="container mx-auto flex justify-between items-center px-4 py-3">
    <a
      href="/"
      class="flex items-center gap-3 hover:opacity-80 transition-opacity"
    >
      <img src={astroLogo.src} alt="Store Logo" class="h-10 w-auto" />
      <h1 class="text-2xl font-bold text-gray-800 ">Store</h1>
    </a>

    <div class="flex items-center gap-4">
      <button
        aria-label="Search"
        class="text-gray-600 hover:text-main transition-colors p-2 rounded-full hover:bg-gray-100"
      >
        <Search class="w-5 h-5" />
      </button>
      <a
        href="/cart"
        aria-label={`Shopping Cart`}
        class="relative text-gray-600 hover:text-main transition-colors p-2 rounded-full hover:bg-gray-100"
      >
        <ShoppingCart class="w-6 h-6" />
        <CartCount client:only />
      </a>
    </div>
  </div>
</header>
