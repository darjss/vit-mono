---
// src/components/Footer.astro
import Facebook from "@/icons/facebook.astro";
import Instagram from "@/icons/instagram.astro";
import Phone from "@/icons/phone.astro";
import Email from "@/icons/email.astro";
const year = new Date().getFullYear();
---

<footer class="bg-secondary border-t-4 border-border mt-16 pt-12 pb-6">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <!-- Social Media -->
      <div class="flex flex-col">
        <h4 class="text-lg font-[var(--heading-font-weight)] uppercase mb-6 relative inline-block">
          Бидэнтэй нэгдээрэй
          <span class="absolute bottom-0 left-0 w-12 h-1 bg-primary"></span>
        </h4>
        
        <div class="flex gap-4 mb-4">
          <a
            href="YOUR_FACEBOOK_LINK"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
            class="w-10 h-10 rounded-full flex items-center justify-center bg-primary/20 text-foreground hover:bg-primary hover:text-foreground hover:scale-110 transition-all duration-200 border-2 border-border shadow-[var(--shadow)] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px]"
          >
            <Facebook class="w-5 h-5" />
          </a>
          <a
            href="YOUR_INSTAGRAM_LINK"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="w-10 h-10 rounded-full flex items-center justify-center bg-primary/20 text-foreground hover:bg-primary hover:text-foreground hover:scale-110 transition-all duration-200 border-2 border-border shadow-[var(--shadow)] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px]"
          >
            <Instagram class="w-5 h-5" />
          </a>
        </div>
        
        <p class="text-sm text-foreground/80 mt-2">
          Нийгмийн сүлжээгээр дамжуулан шинэ мэдээлэл, хямдралын талаар түрүүлж мэдээлэл авах боломжтой.
        </p>
      </div>

      <!-- Contact -->
      <div class="flex flex-col">
        <h4 class="text-lg font-[var(--heading-font-weight)] uppercase mb-6 relative inline-block">
          Холбоо барих
          <span class="absolute bottom-0 left-0 w-12 h-1 bg-primary"></span>
        </h4>
        
        <ul class="space-y-4">
          <li class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center">
              <Phone class="w-4 h-4 text-foreground" />
            </div>
            <a href="tel:99993950" class="text-foreground hover:text-primary transition-colors">
              99993950
            </a>
          </li>
          <li class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center">
              <Email class="w-4 h-4 text-foreground" />
            </div>
            <a
              href="mailto:amerikvitamin@gmail.com"
              class="text-foreground hover:text-primary transition-colors break-all"
            >
              amerikvitamin@gmail.com
            </a>
          </li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-col">
        <h4 class="text-lg font-[var(--heading-font-weight)] uppercase mb-6 relative inline-block">
          Хэрэгтэй холбоос
          <span class="absolute bottom-0 left-0 w-12 h-1 bg-primary"></span>
        </h4>
        
        <ul class="space-y-3">
          <li>
            <a href="/about" class="flex items-center gap-2 text-foreground hover:text-primary transition-colors">
              <span class="w-1.5 h-1.5 rounded-full bg-primary inline-block"></span>
              Бидний тухай
            </a>
          </li>
          <li>
            <a href="/faq" class="flex items-center gap-2 text-foreground hover:text-primary transition-colors">
              <span class="w-1.5 h-1.5 rounded-full bg-primary inline-block"></span>
              Асуулт хариулт
            </a>
          </li>
          <li>
            <a href="/privacy-policy" class="flex items-center gap-2 text-foreground hover:text-primary transition-colors">
              <span class="w-1.5 h-1.5 rounded-full bg-primary inline-block"></span>
              Нууцлалын бодлого
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-border/30 mt-10 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-foreground/60">
          © {year} <span class="text-primary font-medium">Vit.</span> Бүх эрх хуулиар хамгаалагдсан.
        </p>
        <div class="flex gap-4 text-xs text-foreground/60">
          <a href="/terms" class="hover:text-primary transition-colors">Үйлчилгээний нөхцөл</a>
          <span>|</span>
          <a href="/privacy" class="hover:text-primary transition-colors">Нууцлалын бодлого</a>
        </div>
      </div>
    </div>
  </div>
</footer>
