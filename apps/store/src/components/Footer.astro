---
// src/components/Footer.astro
import Facebook from "@/icons/facebook.astro";
import Instagram from "@/icons/instagram.astro";
import Phone from "@/icons/phone.astro";
import Email from "@/icons/email.astro";
const year = new Date().getFullYear();
---

<footer class=" text-gray-700 mt-16">
  <div
    class="container mx-auto px-4 py-8 grid grid-cols-1 md:grid-cols-3 gap-8"
  >
    <div>
      <h4 class="text-lg font-semibold mb-3 text-gray-800">
        Бидэнтэй нэгдээрэй
      </h4>
      <div class="flex gap-4">
        <a
          href="YOUR_FACEBOOK_LINK"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
          class="text-gray-500 hover:text-blue-600 transition-colors"
        >
          <Facebook class="w-6 h-6" />
        </a>
        <a
          href="YOUR_INSTAGRAM_LINK"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="text-gray-500 hover:text-pink-600 transition-colors"
        >
          <Instagram class="w-6 h-6" />
        </a>
      </div>
    </div>

    <div>
      <h4 class="text-lg font-semibold mb-3 text-gray-800">Холбоо барих</h4>
      <ul class="space-y-2">
        <li class="flex items-center gap-2">
          <Phone class="w-5 h-5 text-gray-500" />
          <a href="tel:99993950" class="hover:text-main transition-colors">
            Утас: 99993950
          </a>
        </li>
        <li class="flex items-center gap-2">
          <Email class="w-5 h-5 text-gray-500" />
          <a
            href="mailto:amerikvitamin@gmail.com"
            class="hover:text-main transition-colors break-all"
          >
            Майл: amerikvitamin@gmail.com
          </a>
        </li>
      </ul>
    </div>

    <div>
      <h4 class="text-lg font-semibold mb-3 text-gray-800">Хэрэгтэй холбоос</h4>
      <ul class="space-y-2">
        <li>
          <a href="/about" class="hover:text-main transition-colors">
            Бидний тухай
          </a>
        </li>
        <li>
          <a href="/faq" class="hover:text-main transition-colors">
            Асуулт хариулт
          </a>
        </li>

      </ul>
    </div>
  </div>

  <div class="border-t border-gray-300 mt-8 py-4">
    <p class="text-center text-sm text-gray-500">
      © {year} Vit. Бүх эрх хуулиар хамгаалагдсан.
    </p>
  </div>
</footer>
