{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],

  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "react": ["preact/compat"],
      "react-dom": ["preact/compat"],
      "@/*": ["./src/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@vit/api": ["../../packages/api/src"],
      "@vit/db/*": ["../../packages/db/src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "verbatimModuleSyntax":true
  },

  "references": [
    { "path": "../../packages/api" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/db" }
  ]
}
