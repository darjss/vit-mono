{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    ".astro/actions.d.ts",
    "**/*",
    "../../packages/api/src/lib/session.ts"
  ],
  "exclude": ["dist"],

  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "react": ["preact/compat"],
      "react-dom": ["preact/compat"],
      "@/*": ["./src/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@vit/api": ["../../packages/api/src"],
      "@vit/api/*": ["../../packages/api/src/*"],
      "@vit/db/*": ["../../packages/db/src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler"
  },

  "references": [
    { "path": "../../packages/api" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/db" }
  ]
}
