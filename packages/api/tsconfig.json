{
  "extends": "@workspace/typescript-config/base.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
  "target": "ESNext",
		"module": "ESNext",
    "composite": true,
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
    "incremental": true,
		"strict": true,
		"skipLibCheck": true,

		"baseUrl": "./",
		"outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
