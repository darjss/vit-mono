{
  "extends": "@workspace/typescript-config/base.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "composite": true,
    "declaration": true, // Good to be explicit, though implied by composite
    "declarationMap": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
      // "@vit/db": ["../db/src"]
    }
  }
}
